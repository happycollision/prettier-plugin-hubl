{
  "name": "hubl-parser",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "commonjs",
  "dependencies": {
    "colors": "^1.4.0"
  },
  "peerDependencies": {
    "prettier": "3.x"
  },
  "devDependencies": {
    "@types/node": "^16.10.2",
    "foreman": "^3.0.1",
    "nodemon": "^2.0.7",
    "ts-node": "^9.1.1",
    "typescript": "^4.6.3"
  },
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "start": "npm run watch-all",
    "test": "tsc && ts-node ./tests/testConfig.ts",
    "watch": "nodemon --config nodemon.test.json",
    "watch-all": "npm run watch --simple-working --simple-broken --complex",
    "watch-simple": "npm run watch --simple-working",
    "watch-complex": "npm run watch --complex",
    "watch-broken": "npm run watch --simple-broken",
    "watch-single": "npm run watch",
    "watch-build": "nodemon --config nodemon.build.json"
  },
