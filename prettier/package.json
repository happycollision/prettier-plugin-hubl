{
  "name": "prettier-printer-hubl",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "tsc",
    "build:watch": "nodemon --config ./configuration/nodemon.build.json",
    "test": "node --experimental-vm-modules ../node_modules/jest/bin/jest.js -c ./configuration/jest.config.js",
    "test:watch": "nodemon --config ./configuration/nodemon.test.json",
    "start": "npm run build && concurrently --raw 'npm:build:watch' 'npm:test:watch'"
  },
  "author": "HubSpot, Inc.",
  "license": "Apache-2.0",
  "dependencies": {
    "@prettier/sync": "0.5.2",
    "prettier": "3.0.0"
  },
  "devDependencies": {
    "@types/node": "^16.10.2",
    "jest": "^27.0.0",
    "jest-watch-typeahead": "^0.2.1",
    "nodemon": "^2.0.13",
    "ts-node": "^9.1.1",
    "typescript": "^4.6.3"
  },
  "private": true
}
