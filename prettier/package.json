{
  "name": "prettier-printer-hubl",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "start": "nodemon --config ./configuration/nodemon.inline.json",
    "test": "tsc && node --experimental-vm-modules ../node_modules/jest/bin/jest.js -c ./configuration/jest.config.js",
    "update-test": "tsc && node --experimental-vm-modules ../node_modules/jest/bin/jest.js -c ./configuration/jest.config.js --update-snapshot",
    "watch": "nodemon --config ./configuration/nodemon.test.json",
    "watch-all": "npm run watch",
    "test-inline": "tsc && node --experimental-vm-modules ../node_modules/.bin/ts-node ./src/inline-test.ts"
  },
  "author": "HubSpot, Inc.",
  "license": "Apache-2.0",
  "dependencies": {
    "prettier": "^3.2.5"
  },
  "devDependencies": {
    "@types/node": "^16.10.2",
    "@types/prettier": "^3.0.0",
    "foreman": "^3.0.1",
    "jest": "^27.0.0",
    "jest-watch-typeahead": "^0.2.1",
    "nodemon": "^2.0.13",
    "ts-node": "^9.1.1",
    "typescript": "^4.6.3"
  },
  "private": true
}
